@page
@model eShop.AdminUI.Pages.Catalog.Category.DetailsModel
@{
}
<div class="card">
    <div class="card-header">
        <h5>@Model.CategoryDetailsViewModel.Name category</h5>
        <a class="btn btn-primary" asp-page="/Catalog/Product/Create" asp-route-categoryId="@Model.CategoryDetailsViewModel.Id">New product</a>
    </div>


    <div class="card-body">

        @if (Model.CategoryDetailsViewModel.Products.Count > 0)
        {
            <div class="list-group">
                @foreach (var product in Model.CategoryDetailsViewModel.Products)
                {
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@product.Name</h5>
                            <small>@product.Price</small>
                        </div>
                        <p class="mb-1">@product.Description</p>
                    </a>
                }
            </div>
        }
        else
        {
            <p>There are no products in this category</p>
        }

        <div class="mt-3">
            <a asp-page="./Index" class="btn btn-primary">Return to list</a>
        </div>
    </div>
</div>