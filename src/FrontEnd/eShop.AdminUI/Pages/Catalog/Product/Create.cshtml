@page
@model eShop.AdminUI.Pages.Catalog.Product.CreateModel
@{
}

<form method="post">
    <input type="hidden" asp-for="CreateProductViewModel.CategoryId" />

    <div class="mb-3">
        <label class="form-label" asp-for="CreateProductViewModel.Name">Name</label>
        <input class="form-control" asp-for="CreateProductViewModel.Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CreateProductViewModel.Description">Description</label>
        <input class="form-control" asp-for="CreateProductViewModel.Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="CreateProductViewModel.Price">Price</label>
        <input class="form-control" asp-for="CreateProductViewModel.Price">
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
