@page
@model eShop.AdminUI.Pages.Catalog.Product.UpdateModel
@{
}

<form method="post">
    <input type="hidden" asp-for="UpdateProductViewModel.Id" />
    <input type="hidden" asp-for="UpdateProductViewModel.CategoryId" />

    <div class="mb-3">
        <label class="form-label" asp-for="UpdateProductViewModel.Name">Name</label>
        <input class="form-control" asp-for="UpdateProductViewModel.Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="UpdateProductViewModel.Description">Description</label>
        <input class="form-control" asp-for="UpdateProductViewModel.Description">
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="UpdateProductViewModel.Price">Price</label>
        <input class="form-control" asp-for="UpdateProductViewModel.Price">
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
