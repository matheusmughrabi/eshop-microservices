@using eShop.WebUI.ViewModels.Authentication
@model RegisterUserViewModel;

<div class="card shadow">
    <div class="card-body">
        <div class="">
            <h4 class="card-title">Register</h4>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Username">Username</label>
                <input class="form-control" asp-for="@Model.Username">
                <span asp-validation-for="@Model.Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Email">Email</label>
                <input class="form-control" asp-for="@Model.Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Password">Password</label>
                <input class="form-control" asp-for="@Model.Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="@Model.ConfirmPassword">Confirm password</label>
                <input class="form-control" asp-for="@Model.ConfirmPassword">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>