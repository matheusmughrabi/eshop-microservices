@using eShop.WebUI.ViewModels.Authentication
@using eShop.WebUI.ViewModels.Toast;
@model LoginViewModel;

@if (TempData["UserCreated"] is not null) 
{
    @await Html.PartialAsync("~/Views/Shared/_Toast.cshtml", new ToastViewModel(TempData["UserCreated"].ToString(), ToastTypeEnum.Success))
}

<div class="card shadow">
    <div class="card-body">
        <div class="">
            <h4 class="card-title">Login</h4>
        </div>

        <form method="post">
            <input type="hidden" asp-for="@Model.ReturnUrl" />
            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Username">Username</label>
                <input class="form-control" asp-for="@Model.Username">
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="@Model.Password">Password</label>
                <input class="form-control" asp-for="@Model.Password">
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>