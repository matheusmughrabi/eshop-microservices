@using eShop.WebUI.ViewModels.Toast;
@model ToastViewModel;

<div aria-live="polite" aria-atomic="true" class="bg-dark position-relative">
    <div class="toast-container position-absolute p-3 top-0 end-0">
        <div class="toast show align-items-center text-white @Model.GetToastBackgroud() border-0">
            <div class="d-flex">
                <div class="toast-body">
                    @Model.Message
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
</div>